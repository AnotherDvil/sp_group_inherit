<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Crea una categorÃ­a en los permisos-->
    <record id="categoria_modulo_services" model="ir.module.category">
        <field name="name">Servicios CRM</field>
    </record>
    <!--Grupo de categorias-->
    <record id="group_crm_benef" model="res.groups">
        <!--Nombre del usuario-->
        <field name="name">Usuario</field>
        <!--Categoria-->
        <field name="category_id" ref="categoria_modulo_services"/>
        <!--Implementa los id's de seguridad (permisos del usuario base y podemos agregar mas)-->
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>